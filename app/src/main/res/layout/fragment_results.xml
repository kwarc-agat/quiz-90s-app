<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentResults">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id_tv_result"
            android:layout_width="216dp"
            android:layout_height="73dp"
            android:layout_marginStart="181dp"
            android:layout_marginLeft="181dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="173dp"
            android:layout_marginRight="173dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/border_result"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/orange"
            android:textColorHighlight="@color/brown"
            android:textColorHint="@color/brown"
            android:textColorLink="@color/brown"
            android:textSize="@dimen/font_header"
            app:layout_constraintBottom_toTopOf="@+id/id_btn_retry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/id_btn_retry"
            android:layout_width="226dp"
            android:layout_height="59dp"
            android:layout_marginStart="165dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="154dp"
            android:layout_marginRight="154dp"
            android:layout_marginBottom="32dp"
            android:text="@string/val_btn_retry"
            app:backgroundTint="@color/orange"
            app:cornerRadius="@dimen/corner_rad_tv"
            app:layout_constraintBottom_toTopOf="@+id/id_btn_quit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_tv_result" />

        <Button
            android:id="@+id/id_btn_quit"
            android:layout_width="226dp"
            android:layout_height="59dp"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="87dp"
            android:layout_marginRight="87dp"
            android:layout_marginBottom="188dp"
            android:text="@string/val_btn_quit"
            app:backgroundTint="@color/orange"
            app:cornerRadius="@dimen/corner_rad_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_btn_retry" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>